<% active = Components::Sidebar::DropdownHelper.active?(items, @sidebar_item_active) %>
<li>
  <a href="#<%= name ||= 'unknown' %>" aria-expanded="<%= active ? 'true' : 'false' %>" data-toggle="collapse" class="<%= active ? '' : 'collapsed' %>">
    <i class="<%= icon ||= nil %>"></i><%= t(name) %>
  </a>

  <ul id="<%= name || 'unknown' %>" class="collapse list-unstyled <%= active ? 'show' : nil %>">
    <% items.each do |item| %>
      <%= render 'components/sidebar/item_dropdown', item %>
    <% end %>
  </ul>
</li>